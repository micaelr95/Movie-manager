    "version": "2.0.0",
    "tasks": [
        {
            "label": "Open in Chrome",
            "type": "shell",
            "command": "chrome",
            "args": [
                "index.html"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        }
    ]
}
